@model IEnumerable<CoffeeSoft.Models.Invoice>

@{
    ViewBag.Title = "Index";
}

<h2>Lista faktur</h2>

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-content table-responsive">
                        <table class="table">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.InvoiceNo)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Order.OrderNo)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Florist.FloristName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Warehouse.WarehouseName)
                                </th>
                                <th></th>
                            </tr>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.InvoiceNo)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Order.OrderNo)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Florist.FloristName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Warehouse.WarehouseName)
                                    </td>
                                    <td>

                                        @Html.ActionLink("Szczegóły", "Details", new { id = item.Id })

                                    </td>
                                </tr>
                            }

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>